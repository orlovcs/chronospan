{
  "compilerOptions": {
    "lib": [
      "ES2020",
    ],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@locales/*": [
        "./src/locales/*"
      ],
      "@constants": [
        "./src/constants"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}